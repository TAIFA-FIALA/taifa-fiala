# TAIFA-FIALA Railway Environment Variables Template

# ===== DATABASE CONFIGURATION =====
# Railway will automatically provide this for PostgreSQL service
DATABASE_URL=${{Postgres.DATABASE_URL}}
POSTGRES_DB=taifa_production
POSTGRES_USER=taifa_admin
POSTGRES_PASSWORD=${{Postgres.POSTGRES_PASSWORD}}
POSTGRES_HOST=${{Postgres.POSTGRES_HOST}}
POSTGRES_PORT=${{Postgres.POSTGRES_PORT}}

# ===== API CONFIGURATION =====
SECRET_KEY=${{RAILWAY_GENERATE_SECRET_KEY}}
ALGORITHM=HS256
ACCESS_TOKEN_EXPIRE_MINUTES=30
API_V1_STR=/api/v1

# ===== ENVIRONMENT SETTINGS =====
ENVIRONMENT=production
DEBUG=false
LOG_LEVEL=INFO

# ===== CORS CONFIGURATION =====
BACKEND_CORS_ORIGINS=["https://taifa-africa.com","https://fiala-afrique.com","https://taifa-fiala.net","https://*.railway.app"]

# ===== DATA COLLECTION =====
SERPER_DEV_API_KEY=${{SERPER_API_KEY}}
RSS_CHECK_INTERVAL_MINUTES=360
SCRAPING_DELAY_SECONDS=2
MAX_CONCURRENT_REQUESTS=3
USER_AGENT=TAIFA-Production/1.0

# ===== TRANSLATION SERVICES =====
OPENAI_API_KEY=${{OPENAI_API_KEY}}
AZURE_TRANSLATOR_KEY=${{AZURE_TRANSLATOR_KEY}}
AZURE_TRANSLATOR_REGION=${{AZURE_TRANSLATOR_REGION}}
GOOGLE_TRANSLATE_API_KEY=${{GOOGLE_TRANSLATE_API_KEY}}
DEEPL_API_KEY=${{DEEPL_API_KEY}}

# ===== NOTIFICATION WEBHOOKS =====
N8N_WEBHOOK_URL=${{N8N_WEBHOOK_URL}}
SLACK_WEBHOOK_URL=${{SLACK_WEBHOOK_URL}}
DISCORD_WEBHOOK_URL=${{DISCORD_WEBHOOK_URL}}

# ===== EMAIL CONFIGURATION =====
SMTP_TLS=true
SMTP_PORT=587
SMTP_HOST=smtp.gmail.com
SMTP_USER=${{SMTP_USER}}
SMTP_PASSWORD=${{SMTP_APP_PASSWORD}}

# ===== FRONTEND CONFIGURATION =====
NEXT_PUBLIC_API_URL=https://api.taifa-fiala.net
NEXT_PUBLIC_APP_URL=https://taifa-africa.com
NEXT_TELEMETRY_DISABLED=1

# ===== MONITORING =====
RAILWAY_DEPLOYMENT_ID=${{RAILWAY_DEPLOYMENT_ID}}
RAILWAY_ENVIRONMENT_NAME=${{RAILWAY_ENVIRONMENT_NAME}}
RAILWAY_SERVICE_NAME=${{RAILWAY_SERVICE_NAME}}

# ===== SECURITY =====
ALLOWED_HOSTS=["taifa-africa.com","fiala-afrique.com","api.taifa-fiala.net",".railway.app"]
TRUSTED_PROXIES=["0.0.0.0/0"]

# ===== RATE LIMITING =====
RATE_LIMIT_REQUESTS_PER_MINUTE=60
RATE_LIMIT_REQUESTS_PER_HOUR=1000

# ===== FEATURE FLAGS =====
ENABLE_TRANSLATION_QUEUE=true
ENABLE_BILINGUAL_ROUTING=true
ENABLE_DATA_COLLECTION=true
ENABLE_COMMUNITY_SUBMISSIONS=true
